pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {
        stage('Get Code from GitHub') {
            steps {
                echo 'Getting code from GitHub...'
                git branch: 'main',
                    url: 'https://github.com/mon-pe/monikaspetitions.git'
            }
        }

        stage('Build and Package') {
            steps {
                dir('Monikaspetitions') {
                    echo 'Building and packaging...'
                    sh '''
                        export JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64
                        export PATH=$JAVA_HOME/bin:$PATH
                        mvn clean package -DskipTests -Dmaven.test.skip=true
                    '''

                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage('Deploy Approval') {
            steps {
                echo 'Waiting for deployment approval...'
                input message: 'Deploy to Tomcat?', ok: 'Deploy'
            }
        }

        stage('Deploy') {
            steps {
                dir('Monikaspetitions') {
                    echo 'Deploying to Tomcat...'
                    sh 'sudo cp target/Monikaspetitions.war /opt/tomcat/webapps/'
                    echo 'Deployed! Available at: http://18.199.170.166:9090/Monikaspetitions'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}