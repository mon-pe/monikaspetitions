pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'Java17'
    }

    stages {
        stage('Get Code from GitHub') {
            steps {
                echo 'Cloning repository from GitHub...'
                git branch: 'main',
                    url: 'https://github.com/mon-pe/monikaspetitions.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging as WAR file...'
                sh 'mvn package'

                // Archive the WAR file
                archiveArtifacts artifacts: '**/target/*.war',
                                 fingerprint: true
            }
        }

        stage('Deploy Approval') {
            steps {
                echo 'Waiting for deployment approval...'
                input message: 'Do you want to deploy to Tomcat?',
                      ok: 'Deploy'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                echo 'Deploying to Tomcat...'

                // Copy WAR file to Tomcat webapps directory
                sh 'sudo cp target/Monikaspetitions.war /opt/tomcat/webapps/'

                echo 'Deployment complete!'
                echo 'Application available at: http://18.197.147.41:9090/Monikaspetitions'
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check the logs.'
        }
    }
}
